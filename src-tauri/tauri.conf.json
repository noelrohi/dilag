{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Dilag",
  "version": "0.1.0",
  "identifier": "com.rohi.dilag",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Dilag",
        "width": 1000,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "titleBarStyle": "Visible",
        "backgroundColor": "#0E1014"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-",
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/noelrohi/dilag/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJEQUUwMDEzQUMxQ0IyMEUKUldRT3NoeXNFd0N1dlRYYTJycHUrUFR4cVhnQXM2NXZCZFdwZVg1Umw1TmRBWEdvQ0hXR3N2Nm4K"
    }
  }
}
