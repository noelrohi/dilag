{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-spawn",
    "shell:allow-kill",
    "updater:default",
    "process:allow-restart",
    "process:allow-exit",
    "dialog:allow-save",
    "fs:allow-watch",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/.dilag/**",
        "$DOWNLOAD/**"
      ]
    },
    "fs:read-all",
    "fs:allow-write-file",
    "deep-link:default"
  ]
}
